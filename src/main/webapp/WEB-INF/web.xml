<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" id="WebApp_ID" version="4.0">
  <display-name>Kiloutou</display-name>
  
  <servlet>
	<display-name>Login</display-name>
	<servlet-name>Login</servlet-name>
	<servlet-class>controller.Main</servlet-class>
  </servlet>
  
  
  <servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
  </servlet-mapping>
  
  <servlet>
	<display-name>Welcome</display-name>
	<servlet-name>Welcome</servlet-name>
	<servlet-class>controller.auth.Welcome</servlet-class>
  </servlet>
  
  <servlet-mapping>
		<servlet-name>Welcome</servlet-name>
		<url-pattern>/welcome</url-pattern>
  </servlet-mapping>

  <servlet>
	<display-name>AddUser</display-name>
	<servlet-name>AddUser</servlet-name>
	<servlet-class>controller.user.AddUserController</servlet-class>
  </servlet>
  
  <servlet-mapping>
		<servlet-name>AddUser</servlet-name>
		<url-pattern>/user/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>ModifyUser</display-name>
    <servlet-name>ModifyUser</servlet-name>
    <servlet-class>controller.user.ModifyUserController</servlet-class>
  </servlet>
    
  <servlet-mapping>
    <servlet-name>ModifyUser</servlet-name>
    <url-pattern>/user/modify</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>DeleteUser</display-name>
    <servlet-name>DeleteUser</servlet-name>
    <servlet-class>controller.user.DeleteUserController</servlet-class>
  </servlet>
    
  <servlet-mapping>
    <servlet-name>DeleteUser</servlet-name>
    <url-pattern>/user/delete</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>InfoUser</display-name>
    <servlet-name>InfoUser</servlet-name>
    <servlet-class>controller.user.InfoUserController</servlet-class>
  </servlet>
    
  <servlet-mapping>
    <servlet-name>InfoUser</servlet-name>
    <url-pattern>/user/info</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>SearchUser</display-name>
    <servlet-name>SearchUser</servlet-name>
    <servlet-class>controller.user.SearchUserController</servlet-class>
  </servlet>
    
  <servlet-mapping>
    <servlet-name>SearchUser</servlet-name>
    <url-pattern>/user/search</url-pattern>
  </servlet-mapping>

  <servlet>
	<display-name>AddEquipment</display-name>
	<servlet-name>AddEquipment</servlet-name>
	<servlet-class>controller.equipment.AddEquipmentController</servlet-class>
  </servlet>
  
  <servlet-mapping>
		<servlet-name>AddEquipment</servlet-name>
		<url-pattern>/equipment/add</url-pattern>
  </servlet-mapping>

  <servlet>
    <display-name>SearchEquipment</display-name>
    <servlet-name>SearchEquipment</servlet-name>
    <servlet-class>controller.equipment.SearchEquipmentController</servlet-class>
  </servlet>
    
  <servlet-mapping>
    <servlet-name>SearchEquipment</servlet-name>
    <url-pattern>/equipment/search</url-pattern>
  </servlet-mapping>


  <servlet>
    <display-name>Error</display-name>
    <servlet-name>Error</servlet-name>
    <servlet-class>controller.ErrorController</servlet-class>
    </servlet>
    
    <servlet-mapping>
      <servlet-name>Error</servlet-name>
      <url-pattern>/error</url-pattern>
    </servlet-mapping>
  
  
	
  <servlet>
	<display-name>AddLoan</display-name>
	<servlet-name>AddLoan</servlet-name>
	<servlet-class>controller.loan.AddLoanController</servlet-class>
  </servlet>
  
  <servlet-mapping>
		<servlet-name>AddLoan</servlet-name>
		<url-pattern>/loan/add</url-pattern>
  </servlet-mapping>
  
  <servlet-mapping>
		<servlet-name>default</servlet-name>
		<url-pattern>*.css</url-pattern>
  </servlet-mapping>

  <welcome-file-list>
	<welcome-file>login.jsp</welcome-file>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
</web-app>